<%= form_for(pid.user.tasks.build, remote: true) do |f| %>
  <%= f.hidden_field :project_id, value: pid.id %>
  <%= fa_icon "plus" %>
  <%= f.text_field :content, maxlength: 85, placeholder: "new task...", class: "inputtask", id: "input_create_task_project_#{pid.id}" %>
  <%= f.submit "Create", class: "btn btn-success btntask", id: "create_task_project_#{pid.id}" %>
<% end %>