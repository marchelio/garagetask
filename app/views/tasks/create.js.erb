<% if @task.save %>
  $("#project_<%=@task.project.id%>").children(".tasks").prepend("<%= escape_javascript(render(@task)) %>");
  $("#project_<%=@task.project.id%>").children(".taskform").html("<%= escape_javascript(render partial: 'tasks/task_form', locals: {pid: @task.project}) %>");
<% else %>
  $("#project_<%=@task.project.id%>").children(".taskform").html("<%= escape_javascript(shared/error_messages) %>")
<% end %>