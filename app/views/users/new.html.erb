<h1>Реєстрація</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Ім'я" %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Підтвердження" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Створити аккаунт"%>
    <% end %>
  </div>
</div>
